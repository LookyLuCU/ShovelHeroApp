<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDEDFB"
    tools:context=".Controllers.EditUserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/shovel_hero_logo"
        android:contentDescription="Shovel Hero Logo"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile Information"
            android:textSize="24sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/btnChangeProfilePicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/add_image"
                android:contentDescription="Change Profile Picture"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:background="?android:selectableItemBackground"
                android:onClick="onUploadProfilePictureClick"/>
            
            <ImageView
                android:id="@+id/ivProfileImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Profile Picture"
                android:src="@drawable/shovel_hero_logo"
                android:layout_marginRight="8dp"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Profile Picture"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:text="First Name"/>

    <EditText
        android:id="@+id/etEditFirstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="First Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:text="Last Name"/>

    <EditText
        android:id="@+id/etEditLastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Last Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:text="Birthdate"/>

    <EditText
        android:id="@+id/etEditBirthdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Birthdate"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:text="Email"/>

    <EditText
        android:id="@+id/etEditEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Email"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:text="Phone Number"/>

    <EditText
        android:id="@+id/etEditPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Phone Number"/>

    <Button
        android:id="@+id/btnUpdateProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:onClick="UpdateAccount"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>